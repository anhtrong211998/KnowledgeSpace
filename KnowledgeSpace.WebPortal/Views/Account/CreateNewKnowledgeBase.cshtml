@model KnowledgeSpace.ViewModels.Contents.KnowledgeBaseCreateRequest

@{
    ViewData["Title"] = "Tạo mới bài đăng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/controllers/accountController.js" asp-append-version="true"></script>
    <script>
        var controller = new accountController();
        controller.initialize();
    </script>
}
<div class="container">
    <div class="row">
        <form action="/account/CreateNewKnowledgeBase" method="post" enctype="multipart/form-data" id="frm_new_kb">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="span6" style="padding: 4px; border: 1px solid #dedede;">
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" required class="required input-xlarge"
                                asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="required input-xlarge" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Environment" class="control-label"></label>
                        <textarea asp-for="Environment" id="txt_environment" rows="5" class="required span6"></textarea>
                        <span asp-validation-for="Environment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Problem" class="control-label"></label>
                        <textarea asp-for="Problem" rows="5" id="txt_problem" class="required span6"></textarea>
                        <span asp-validation-for="Problem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ErrorMessage" class="control-label"></label>
                        <input asp-for="ErrorMessage" class="input-xlarge" />
                        <span asp-validation-for="ErrorMessage" class="text-danger"></span>
                    </div>
                </div>
                <div class="span6" style="padding: 4px; border: 1px solid #dedede;border-left: 0;">
                    <div class="form-group">
                        <label for="product_desc">Mô tả:</label>
                        <textarea asp-for="Description" rows="5" class="span6"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StepToReproduce" class="control-label"></label>
                        <textarea asp-for="StepToReproduce" id="txt_step_reproduce" rows="5" class="required span6"></textarea>
                        <span asp-validation-for="StepToReproduce" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Workaround" class="control-label"></label>
                        <textarea asp-for="Workaround" id="txt_workaround" rows="5" class="required span6"></textarea>
                        <span asp-validation-for="Workaround" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note" class="control-label"></label>
                        <textarea asp-for="Note" rows="5" id="txt_note" class="required span6"></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="attachment_items">
                        <label asp-for="Attachments" class="control-label"></label>
                        <p><input type="file" name="attachments" /></p>
                        <a id="btn_add_attachment" href="#">Thêm đính kèm</a>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" value="Đăng bài" class="btn btn-inverse">
                        <img src="/images/loading.gif" id="contact-loader" alt="Đang xử lý...">
                    </div>
                </div>
                
            </div>
            
        </form>
    </div>
</div>
